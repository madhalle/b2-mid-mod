<h1> <%= @movie.title %> </h1>

<p> <%=@movie.creation_year  %> </p>
<p> <%=@movie.genre  %> </p>

<h2>Actors</h2>

<%@movie.actors.each do |actor| %>
  <p> <%=actor.name %> </p>
<% end %>
<p> Average Age of Actors: <%=@movie.actors.average_age%> </p>

<h2> Add an Actor</h2>
<p>Enter Actors Name</p>
<%= form_tag("/movies/#{@movie.id}/actors", method: :post) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br/>
<p><%= submit_tag 'Submit' %></p>
<% end %>
